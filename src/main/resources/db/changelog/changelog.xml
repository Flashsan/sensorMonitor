    <changeSet author="Aliaksandr Hryharovich" id="1">
        <createTable tableName="sensor_monitors">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="model" type="varchar(255)"/>
            <column name="rangeFrom" type="int"/>
            <column name="rangeTo" type="int"/>
            <column name="type" type="int"/>
            <column name="unit" type="int"/>
            <column name="location" type="varchar(255)"/>
            <column name="description" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="Aliaksandr Hryharovich" id="2">
